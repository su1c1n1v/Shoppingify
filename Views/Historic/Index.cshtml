@{
    ViewData["Title"] = "History";
}
<head>
    <link href="~/css/Historic.css" rel="stylesheet"  asp-append-version="true"/>
</head>
<div class="body-historic">
    <div class="historic">
        <div class="historic-header">
            <h3 class="historic-title">Shopping history</h3>
        </div>
        <div class="historic-body-content">
            <h3 class="historic-title2">August 2020</h3>
            @using (Html.BeginForm("Historic", "Historic", FormMethod.Get, new { @class = "login-form" }))
            {
                <button type="submit" class="historic-item">
                    <div class="historic-title3">
                        <h3>Shopping history</h3>
                    </div>
                    <div class="historic-item-content">
                        <div class="historic-calender">
                            <img src="~/img/calendar-text (2).svg" alt="Alternate Text" style="color: rgba(0, 0, 0, 0.01);" />
                            <p class="historic-title4">Mon 24.8.2020</p>
                        </div>
                        <div class="historic-item-button">
                            <h3 class="historic-button">Completed</h3>
                            <img src="~/img/arrow-right (1).svg" alt="Alternate Text" />
                        </div>
                    </div>
                </button>
            }
            @using (Html.BeginForm("Historic", "Historic", FormMethod.Get, new { @class = "login-form" }))
            {
                <button type="submit" class="historic-item">
                    <div class="historic-title3">
                        <h3>Board game week</h3>
                    </div>
                    <div class="historic-item-content">
                        <div class="historic-calender">
                            <img src="~/img/calendar-text (2).svg" alt="Alternate Text" />
                            <p class="historic-title4">Mon 10.8.2020</p>
                        </div>
                        <div class="historic-item-button">
                            <h3 class="historic-button2">Canceled</h3>
                            <img src="~/img/arrow-right (3).svg" alt="Alternate Text" />
                        </div>
                    </div>
                </button>
            }
        </div> 
    </div>
</div>
